    {% block stylesheets %}
    <style>
        /* Global styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #0d0d0d; /* Fond sombre √©l√©gant */
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        /* Centrer le titre en haut de la page */
        .title {
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%); /* Centrage horizontal */
            font-size: 2.5rem;  /* Taille du titre */
            font-weight: bold;  /* Gras pour rendre le titre plus visible */
            color: #fff; /* Couleur blanche pour le texte */
            z-index: 2; /* Assurez-vous qu'il est au-dessus des autres √©l√©ments */
            text-align: center;  /* Centrer le texte */
            width: 100%; /* Prendre toute la largeur */
        }

        /* Main content section */
        .main-section {
            position: relative;
            height: 100vh; /* Full viewport height */
            display: flex;
            justify-content: space-between;
            width: 100%; /* Prendre toute la largeur */
            z-index: 1;
        }

        .video-section {
            flex: 1; /* Occupy equal width */
            position: relative;
            overflow: hidden; /* Ensure videos stay within their containers */
        }

        /* Style for the video iframe */
        .video-container {
            width: 100%;
            height: 100%;
            border: none;
            object-fit: cover;
            transition: transform 0.5s ease-in-out;
        }

        /* Hover effect on video */
        .video-section:hover .video-container {
            transform: scale(1.1); /* Zoom in effect */
        }

        .content-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            z-index: 2;
            padding: 20px;
            max-width: 80%;
        }

        .content-text h1 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            font-weight: 600;
            margin-bottom: 15px;
            color: #fff;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.6);
        }

        .content-text p {
            font-size: 1.2rem;
            margin-bottom: 20px;
            color: #f1f1f1;
        }

        /* Style pour le bouton √©l√©gant */
        .btn-elegant {
            padding: 15px 40px;
            font-size: 1.5rem;
            font-weight: 700;
            background-color: #090706;
            color: #fff;
            border: 2px solid transparent;
            border-radius: 50px;
            text-transform: uppercase;
            letter-spacing: 2px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            transition: all 0.4s ease;
            display: inline-block;
        }

        /* Effet de survol √©l√©gant */
        .btn-elegant:hover {
            background-color: #34495e;
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
            color: #fff;
        }

        /* Focus effect on button */
        .btn-elegant:focus {
            outline: none;
            border-color: #fff;
        }
    </style>
    {% endblock %}
</head>


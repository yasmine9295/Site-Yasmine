    <style>
        /* Global styles */
        body {
            font-family: 'Helvetica', sans-serif;
            background-color: #fff;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        /* Background video section */
        .background-video-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            overflow: hidden;
        }

        #background-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Main content section */
        .main-section {
            position: relative;
            height: 100vh; /* Full viewport height */
            display: flex;
            justify-content: space-between;
            z-index: 1;
        }

        .video-section {
            flex: 1; /* Occupy equal width */
            position: relative;
            overflow: hidden; /* Ensure videos stay within their containers */
        }

        /* Style for the video iframe */
        .video-container {
            width: 100%;
            height: 100%;
            border: none;
            object-fit: cover; /* Ensure the video fills the section */
        }

        .content-text {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            text-align: center;
            z-index: 1;
        }

        .content-text h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .content-text p {
            font-size: 1.2rem;
        }

        .btn {
            color: #f1f1f1;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;

{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles globaux */
        body {
            font-family: 'Arial', sans-serif;
            background: url('{{ asset('https://i.pinimg.com/736x/12/71/f7/1271f79e3d39d059c6a300ce2c1b5be0.jpg') }}') no-repeat center center fixed;
            background-size: cover;
            background-position: center center;
            filter: contrast(1.2) brightness(1.1) sharpen(0.8);
            color: #fff;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        /* Navbar styles */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background-color: #fff;
            padding: 10px 30px; /* Reduced padding for a smaller navbar */
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .navbar-brand {
            font-size: 1.6rem; /* Reduced font size */
            font-weight: bold;
            color: #222;
            text-decoration: none;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .navbar-nav {
            list-style-type: none;
            display: flex;
            margin-left: auto;
        }

        .nav-item {
            margin-right: 20px;
        }

        .nav-link {
            color: #555;
            font-size: 1rem; /* Reduced font size */
            text-transform: uppercase;
            font-weight: 500;
            transition: color 0.3s ease, transform 0.3s ease;
            text-decoration: none;
        }

        .nav-link:hover {
            color: #333;
            transform: translateY(-2px);
        }

        /* Form container */
        .form-container {
            background: rgba(255, 248, 248, 0.8); /* Fond semi-transparent pour améliorer la lisibilité */
            border: 1px solid #333;
            border-radius: 15px;
            box-shadow: 0 8px 15px rgb(0, 0, 0);
            padding: 30px;
            max-width: 400px; /* Taille du formulaire plus petite */
            width: 100%;
            text-align: center;
            animation: fadeIn 1s ease-in-out;
            margin-top: 80px; /* Ajout d'un espace au-dessus du formulaire */
        }

        /* Animation d'apparition */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-title {
            font-size: 2rem;
            color: #333; /* Gris foncé pour plus de contraste */
            margin-bottom: 30px;
            font-family: 'Georgia', serif;
            font-weight: 700;
        }

        .form-group {
            margin-bottom: 20px; /* Moins d'espace entre les champs */
        }

        .form-control {
            background: transparent;
            border: none;
            border-bottom: 2px solid #666;
            color: #fff;
            padding: 10px;
            font-size: 1rem;
            transition: all 0.3s ease-in-out;
            width: 100%;
        }

        .form-control:focus {
            outline: none;
            border-color: #d4af37;
            box-shadow: 0 4px 10px rgba(212, 175, 55, 0.2);
        }

        label {
            display: block;
            text-align: left;
            color: #ccc;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .btn {
            width: 100%;
            padding: 14px;
            background-color: #333; /* Fond noir pour le bouton */
            color: white;
            font-size: 1.2rem;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .btn:hover {
            background-color: #555; /* Gris plus foncé sur survol */
        }

        .btn-luxury {
            background: linear-gradient(90deg, #d4af37, #a57f2b);
            color: #fff;
            font-size: 1.2rem;
            font-weight: bold;
            border: none;
            border-radius: 50px;
            padding: 12px 20px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            width: 100%;
            margin-top: 10px;
            letter-spacing: 1px;
        }

        .btn-luxury:hover {
            background: linear-gradient(90deg, #a57f2b, #d4af37);
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(212, 175, 55, 0.4);
        }

        /* Alertes */
        .alert {
            background: rgba(255, 0, 0, 0.2);
            color: #ff4d4d;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 20px;
        }

        .forgot-password {
            margin-top: 20px;
        }

        .forgot-password a {
            color: #f1f1f1;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease-in-out;
        }

        .forgot-password a:hover {
            color: #fff;
            text-decoration: underline;
        }

        /* Footer du formulaire */
        .form-footer {
            text-align: center;
            margin-top: 20px;
            font-size: 1rem;
        }

        .form-footer a {
            color: #b08d57; /* Accent doré pour les liens */
            text-decoration: none;
            font-weight: 600;
        }

        .form-footer a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Flash message error -->
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="form-container">
            <h2 class="form-title">Inscription</h2>

            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="form-group">
                    {{ form_row(registrationForm.pseudo, {
                        'attr': {'class': 'form-control', 'placeholder': 'Pseudo'}
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.email, {
                        'attr': {'class': 'form-control', 'placeholder': 'Email'}
                    }) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Mot de passe',
                        'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}
                    }) }}
                </div>

                <div class="form-group">
                    <button type="submit" class="btn">S'inscrire</button>
                </div>

            {{ form_end(registrationForm) }}

            <div class="form-footer">
                <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
            </div>
        </div>
    </div>
{% endblock %}

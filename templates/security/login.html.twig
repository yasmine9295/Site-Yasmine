{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <style>
        /* Styles globaux */
            body {
            font-family: 'Arial', sans-serif;
            background: url('{{ asset('https://i.pinimg.com/736x/12/71/f7/1271f79e3d39d059c6a300ce2c1b5be0.jpg') }}') no-repeat center center fixed;
            background-size: cover; 
            background-position: center center;
            filter: contrast(1.2) brightness(1.1) sharpen(0.8); 
            color: #rgb(0, 0, 0);
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

         /* Navbar styles */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            background-color: #fff;
            padding: 10px 30px; /* Reduced padding for a smaller navbar */
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand {
            font-size: 1.6rem; /* Reduced font size */
            font-weight: bold;
            color: #222;
            text-decoration: none;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .navbar-nav {
            list-style-type: none;
            display: flex;
            margin-left: auto;
        }

        .nav-item {
            margin-right: 20px;
        }

        .nav-link {
            color: #555;
            font-size: 1rem; /* Reduced font size */
            text-transform: uppercase;
            font-weight: 500;
            transition: color 0.3s ease, transform 0.3s ease;
            text-decoration: none;
        }

        .nav-link:hover {
            color: #333;
            transform: translateY(-2px);
        }

        /* Conteneur principal */
        .login-container {
            background: rgba(255, 248, 248, 0.66); /* Fond semi-transparent pour améliorer la lisibilité */
            border: 1px solid #333;
            border-radius: 15px;
            box-shadow: 0 8px 15px rgb(0, 0, 0);
            padding: 50px;
            max-width: 500px;
            width: 100%;
            text-align: center;
            animation: fadeIn 1s ease-in-out;
        }

        /* Animation d'apparition */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Titre */
        .login-title {
            font-family: 'Cinzel Decorative', serif;
            font-size: 2.5rem;
            color:rgb(0, 0, 0); /* Or élégant */
            margin-bottom: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        /* Champs de formulaire */
        .form-group {
            margin-bottom: 25px;
        }

        .form-control {
            background: transparent;
            border: none;
            border-bottom: 2px solid #666;
            color: #rgb(0, 0, 0);
            padding: 10px;
            font-size: 1rem;
            transition: all 0.3s ease-in-out;
            width: 100%;
        }

        .form-control:focus {
            outline: none;
            border-color: #d4af37;
            box-shadow: 0 4px 10px rgba(212, 175, 55, 0.2);
        }

        label {
            display: block;
            text-align: left;
            color: #rgb(0, 0, 0);
            font-weight: 600;
            margin-bottom: 8px;
        }

        /* Bouton de connexion */
        .btn-luxury {
            background: linear-gradient(90deg, #d4af37, #a57f2b);
            color: #rgb(0, 0, 0);
            font-size: 1.2rem;
            font-weight: bold;
            border: none;
            border-radius: 50px;
            padding: 12px 20px;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            width: 100%;
            margin-top: 10px;
            letter-spacing: 1px;
        }

        .btn-luxury:hover {
            background: linear-gradient(90deg, #a57f2b, #d4af37);
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(212, 175, 55, 0.4);
        }

        /* Lien mot de passe oublié */
        .forgot-password {
            margin-top: 20px;
        }

        .forgot-password a {
            color: #rgb(0, 0, 0);
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease-in-out;
        }

        .forgot-password a:hover {
            color: #rgb(0, 0, 0);
            text-decoration: underline;
        }

        /* Alertes */
        .alert {
            background: rgba(255, 0, 0, 0.2);
            color: #ff4d4d;
            border-radius: 8px;
            padding: 10px;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        {% if error %}
            <div class="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% if app.user %}
            <div class="alert alert-info">
                Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>.  
                <a href="{{ path('app_logout') }}" class="text-decoration-none" style="color:rgb(255, 255, 255);">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="login-title">Connexion</h1>

        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Adresse e-mail</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-luxury" type="submit">Se connecter</button>
        </form>

        <div class="forgot-password">
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
        </div>
    </div>
{% endblock %}